@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>;

<h1>The Best Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>There are no restaurants in the list!</h3>  
}

<ul>
  @foreach(Restaurant Restaurant in Model)
  {
    <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.Style</li>
  }
</ul>

<p>@Html.ActionLink("Add new item", "Create")</p>
<p>@Html.ActionLink("See all Cuisines", "Index", "Cuisines")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>